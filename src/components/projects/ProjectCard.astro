---
import { Icon } from "astro-icon";
import type { Tech } from "@/lib";

export interface Props {
  title: string;
  technologies: Tech[];
  link: string;
  github: string;
}

const { title, technologies, link, github } = Astro.props as Props;
---

<div class="flex flex-col">
  <div>
    <h3
      class="py-2 font-headline uppercase link-decor-underline-75 inline-block md:text-xl"
    >
      {title}
    </h3>
  </div>

  <div class="border-red-200 dark:border-red-400 border-[2px]">
    <slot name="image" />
  </div>
  <ul class="flex gap-2 p-2 h-10 w-full bg-slate-200 dark:bg-slate-600">
    {
      technologies.map((tech) => {
        return (
          <li
            class="text-center tooltip expand hover:-translate-y-2 transition-transform duration-200"
            data-title={tech.fancy}
          >
            <Icon name={tech.icon} />
          </li>
        );
      })
    }
  </ul>

  <div class="text-sm flex flex-col gap-2 bg-slate-100 dark:bg-slate-700 p-4">
    <slot />
  </div>

  <div class="self-end flex gap-3 xl:gap-5">
    <div
      class="bg-red-300 dark:bg-red-500 inline-block uppercase font-headline px-1 mt-3 link-decor-underline"
    >
      <a href={link} target="_blank" rel="noopener noreferrer">Visit</a>
    </div>
    <div
      class="bg-red-300 dark:bg-red-500 inline-block uppercase font-headline px-1 mt-3 link-decor-underline"
    >
      <a href={github} target="_blank" rel="noopener noreferrer">View more</a>
    </div>
  </div>
</div>

<style>
  [astro-icon] {
    height: 1.5rem;
  }

  .tooltip {
    position: relative;
  }

  .tooltip:before,
  .tooltip:after {
    display: block;
    opacity: 0;
    pointer-events: none;
    position: absolute;
    z-index: 999;
  }

  .tooltip:after {
    border-right: 6px solid transparent;
    border-bottom: 6px solid rgba(0, 0, 0, 0.75);
    border-left: 6px solid transparent;
    content: "";
    height: 0;
    top: 25px;
    left: 7px;
    width: 0;
  }
  .tooltip:before {
    background: rgba(0, 0, 0, 0.75);
    border-radius: 2px;
    color: #fff;
    content: attr(data-title);
    font-size: 14px;
    padding: 6px 10px;
    top: 31px;
    /* left: 15px; */
  }

  .tooltip.expand:before {
    transform: scale3d(0.2, 0.2, 1);
    transition: all 0.2s ease-in-out;
  }

  .tooltip.expand:after {
    transform: translate3d(0, 6px, 0);
    transition: all 0.1s ease-in-out;
  }

  .tooltip.expand:hover:before,
  .tooltip.expand:hover:after {
    opacity: 1;
    transform: scale3d(1, 1, 1);
  }
  .tooltip.expand:hover:after {
    transition: all 0.2s 0.1s ease-in-out;
  }
</style>
