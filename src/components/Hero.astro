---
import { Image } from "@astrojs/image/components";

import heroImage from "@/assets/santa-hat.png";
import Contacts from "@/components/Contacts.astro";
---

<section
  class="card h-screen w-full flex items-center justify-center"
  id="home"
>
  <div class="flex flex-col items-center justify-center gap-10">
    <div class="flex flex-col items-end gap-2">
      <h1 class="text-red-400 font-bold text-6xl name-header">Humphrey</h1>
      <span class="font-semibold px-4">Web Developer</span>
    </div>

    <Image
      src={heroImage}
      alt="Santa hat"
      height={300}
      format="webp"
      class="transition-transform ease-in-out hover:rotate-12 duration-300"
    />

    <div class="self-end px-8">
      <Contacts />
    </div>
  </div>
</section>
