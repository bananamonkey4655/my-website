---
import { Icon } from "astro-icon";
import type { Tech } from "@/lib";

export interface Props {
  title: string;
  technologies: Tech[];
}

const { title, technologies } = Astro.props as Props;
---

<div>
  <h3
    class="inline-block py-2 after:w-3/4 after:h-[2px] after:block after:bg-red-400"
  >
    {title}
  </h3>
</div>

<ul
  class="grid grid-cols-4 gap-10 items-center py-5 px-4 xl:grid-cols-10 bg-slate-100 dark:bg-slate-600"
>
  {
    technologies.map((tech) => (
      <li
        class="group text-center"
        data-title={tech.description ?? "Nothing found! Damn it."}
      >
        <Icon
          name={tech.icon}
          aria-label={tech.name}
          class="h-10 m-auto group-hover:-translate-y-2 transition-transform duration-200"
        />
        <span class="font-headline font-semibold text-xs whitespace-nowrap">
          {tech.name}
        </span>
      </li>
    ))
  }
</ul>
